modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start Streamlit App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run ML Model"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Generate Dataset"

[[workflows.workflow]]
name = "Start Streamlit App"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run main.py --server.port 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "Run ML Model"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python ml_model.py"

[[workflows.workflow]]
name = "Generate Dataset"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python generate_mental_health_dataset.py"

[deployment]
run = ["sh", "-c", "streamlit run main.py --server.port 5000"]

[[ports]]
localPort = 5000
externalPort = 80
